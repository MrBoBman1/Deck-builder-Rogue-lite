class Card():
    def __init__(self):
        super.__init__()

class Playing_Card(Card):
    def __init__(self,number,suit,enhancement,seal,edition):
        super.__init__()
        self.number = number
        self.suit = suit
        self.enhancement = enhancement
        self.seal = seal
        self.edition = edition
        self.value = self.get_chips(self)
        if self.number in ["King","Queen","Jack"]:
            self.isface = True
        else:
            self.siface = False
        self.display = self.set_display(self)
        
    def get_chips(self):
        if self.number.isdigit():
            self.value = int(self.number)
        else:
            if self.number == "Ace":
                self.value = 11
            elif self.number == "King":
                self.value = 10
            elif self.number == "Queen":
                self.value = 10
            elif self.number == "Jack":
                self.value = 10
    
    def set_display(self):
        text = ""
        if self.number.isdigit():
            text 
        if self.suit == "Heart":
            text += "♥"
        elif self.suit == "Diamonds":
            text += "♦"
        elif self.suit == "Spades":
            text += "♠"
        elif self.suit == "Clubs":
            text += "♣"
    
